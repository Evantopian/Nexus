<div id="chat-container">
  <div id="messages">
    <%= for msg <- @messages do %>
      <p><strong><%= msg.user %>:</strong> <%= msg.body %></p>
    <% end %>
  </div>

  <form phx-submit="send">
    <input type="text" name="message" value={@message} placeholder="Type your message..." autocomplete="off"/>
    <button type="submit">Send</button>
  </form>
</div>
